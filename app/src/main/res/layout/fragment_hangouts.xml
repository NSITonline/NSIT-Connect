<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_1"
                    android:id="@+id/hang_college"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ff2c2c2c"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="wrap_content"
                            android:layout_height="140dp"
                            android:src="@drawable/college_hangout"
                            android:adjustViewBounds="false"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Explore the hotspots of NSIT..."
                            android:textSize="17sp"
                            android:textColor="#ffffff"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="1600dp"
                    android:orientation="horizontal"
                    android:layout_height="200dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:background="#ff8b8b8b">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Find interesting places around you..."
                        android:id="@+id/textView3"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffd2d2d2" />

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_cafe"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/cafe_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="CAFES"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:textIsSelectable="false" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_nightclub"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/nightclub_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="NIGHTCLUB"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_restaurant"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/rest_hangout2"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="RESTAURANT"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_shoppingmalls"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/shoppingmall_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="MALLS"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_bowling"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:src="@drawable/bowling_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="BOWLING"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_food"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:src="@drawable/food_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="FOOD"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_movies"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/movie_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="MOVIES"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_amusment"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/amuse_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="AMUSEMENT"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_1"
                        android:id="@+id/hang_park"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:src="@drawable/park_hangout"
                                android:adjustViewBounds="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="#ff545454">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="PARK"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>
</FrameLayout>