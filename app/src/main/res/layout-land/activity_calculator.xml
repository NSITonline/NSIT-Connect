<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinb"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp" />

        <Spinner
            android:id="@+id/spins"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Choose things appropriately and dont bother to fill boxes which isn&apos;t required."
        android:textColor="#ca969191"
        android:textSize="17sp" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"

                    android:text="TH 1"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/one"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="12dp"

                    android:text="PR 1"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/six"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"

                    android:text="TH 2"
                    android:textColor="#01b29b"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/two"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="12dp"

                    android:text="PR 2"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/seven"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"

                    android:text="TH 3"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/three"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="12dp"

                    android:text="PR 3"
                    android:textColor="#01b29b"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/eight"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"

                    android:text="TH 4"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/four"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="12dp"

                    android:text="PR 4"
                    android:textColor="#01b29b"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/nine"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
